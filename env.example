# AI API Configuration
# Uncomment and configure the AI service you want to use

# OpenAI GPT-4
# OPENAI_API_KEY=your_openai_api_key_here

# Authentication - Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Database - Neon (PostgreSQL)
NEON_DATABASE_URL="postgresql://user:password@host:5432/dbname"
# or use DATABASE_URL as fallback
# DATABASE_URL="postgresql://user:password@host:5432/dbname"

# Drizzle
# No extra env needed; run migrations with drizzle-kit

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Subscription Plans - Three Tier System
NEXT_PUBLIC_BASIC_MONTHLY_PRICE_ID=price_basic_monthly_plan_id_here
NEXT_PUBLIC_BASIC_YEARLY_PRICE_ID=price_basic_yearly_plan_id_here
NEXT_PUBLIC_ELITE_MONTHLY_PRICE_ID=price_elite_monthly_plan_id_here
NEXT_PUBLIC_ELITE_YEARLY_PRICE_ID=price_elite_yearly_plan_id_here

# Rate Limiting
MAX_FREE_QUERIES_PER_MONTH=10

# Site URL (for sitemap/robots)
NEXT_PUBLIC_SITE_URL=https://your-site-url

# Environment
NODE_ENV=development 